{ 
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "allowJs": true,
        "target":"es6",
        "jsx": "react",
        "esModuleInterop":true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "declaration": true,
        "declarationDir": "./dist/lib"
    },
    "include":[
        "./src/core/**/*",
        "./src/test/**/*",
        "./src/reactjs/**/*", "../setupTests.js", "jest.setup.ts"
    ]
 }